<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- TextInput -->
  <style name="Theme.SuitMedia.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
    <item name="materialThemeOverlay">@style/Theme.SuitMedia.TextInputLayout.ThemeOverlay</item>
    <item name="boxBackgroundColor">@color/til_bg</item>
    <item name="boxStrokeWidth">1dp</item>
    <item name="boxStrokeColor">@color/til_stroke_selector</item>
  </style>

  <style name="Theme.SuitMedia.TextInputEditText" parent="Widget.Material3.TextInputEditText.OutlinedBox.Dense">
    <item name="android:paddingTop">@dimen/spacing_14</item>
    <item name="android:paddingBottom">@dimen/spacing_14</item>
    <item name="android:paddingStart">@dimen/spacing_16</item>
    <item name="android:paddingEnd">@dimen/spacing_16</item>
    <item name="android:textSize">@dimen/font_14</item>
    <item name="android:textColorHint">@color/til_hint_color</item>
  </style>

  <style name="Theme.SuitMedia.TextInputLayout.ThemeOverlay">
    <item name="errorEnabled">true</item>
    <item name="hintEnabled">false</item>
    <item name="boxCornerRadiusTopEnd">@dimen/spacing_8</item>
    <item name="boxCornerRadiusTopStart">@dimen/spacing_8</item>
    <item name="boxCornerRadiusBottomEnd">@dimen/spacing_8</item>
    <item name="boxCornerRadiusBottomStart">@dimen/spacing_8</item>
    <item name="editTextStyle">@style/Theme.SuitMedia.TextInputEditText</item>
  </style>

  <!-- Button -->
  <style name="Theme.SuitMedia.Button.Style" parent="Widget.Material3.Button">
    <item name="shapeAppearanceOverlay">@style/Theme.SuitMedia.ShapeAppearanceOverlay.CornerSize.50Percent  </item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">@dimen/font_16</item>
    <item name="android:textAllCaps">false</item>
    <item name="backgroundTint">@color/seed</item>
  </style>

  <!-- Toolbar -->
  <style name="Theme.SuitMedia.Toolbar" parent="Widget.Material3.Toolbar">
    <item name="titleTextAppearance">@style/Theme.SuitMedia.Toolbar.Title.TextAppearance</item>
    <item name="titleTextColor">@color/white</item>
    <item name="navigationIcon">@drawable/ic_baseline_arrow_back_24</item>
  </style>

  <style name="Theme.SuitMedia.Toolbar.Title.TextAppearance" parent="">
    <item name="android:textSize">@dimen/font_18</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
  </style>

  <!-- Progress Bar -->
  <style name="Theme.SuitMedia.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
    <item name="materialThemeOverlay">@style/Theme.SuitMedia.CircularProgressIndicator.ThemeOverlay</item>
    <item name="android:indeterminate">true</item>
  </style>

  <style name="Theme.SuitMedia.CircularProgressIndicator.ThemeOverlay" parent="">
    <item name="colorPrimary">@color/md_theme_light_primary</item>
  </style>

  <!-- MaterialCard -->
  <style name="Theme.SuitMedia.MaterialCard.Style" parent="Widget.Material3.CardView.Filled">
    <item name="cardBackgroundColor">@color/white</item>
    <item name="cardElevation">@dimen/spacing_1</item>
  </style>

  <!-- Text View -->
  <style name="Theme.SuitMedia.TextView.Regular.10" parent="">
    <item name="android:textSize">@dimen/font_10</item>
    <item name="android:textColor">@color/white</item>
  </style>


  <style name="Theme.SuitMedia.TextView.Regular.12" parent="">
    <item name="android:textSize">@dimen/font_12</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="Theme.SuitMedia.TextView.Regular.14" parent="">
    <item name="android:textSize">@dimen/font_14</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="Theme.SuitMedia.TextView.Bold.16" parent="">
    <item name="android:textSize">@dimen/font_16</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Theme.SuitMedia.TextView.Bold.18" parent="">
    <item name="android:textSize">@dimen/font_18</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Theme.SuitMedia.TextView.Bold.24" parent="">
    <item name="android:textSize">@dimen/font_24</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
  </style>


  <!-- Shape Appearance Overlay -->
  <style name="Theme.SuitMedia.ShapeAppearanceOverlay.CornerSize.8" parent="">
    <item name="cornerSize">@dimen/spacing_8</item>
  </style>

  <style name="Theme.SuitMedia.ShapeAppearanceOverlay.CornerSize.50Percent" parent="">
    <item name="cornerSize">50%</item>
  </style>
</resources>