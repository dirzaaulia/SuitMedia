<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <View
      android:id="@+id/line_ornament_top"
      android:layout_width="@dimen/spacing_200"
      android:layout_height="@dimen/spacing_2"
      android:layout_marginTop="@dimen/spacing_70"
      android:background="@color/seed"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <View
      android:id="@+id/line_ornament_middle"
      android:layout_width="@dimen/spacing_216"
      android:layout_height="@dimen/spacing_2"
      android:layout_marginTop="@dimen/spacing_10"
      android:background="@color/seed"
      app:layout_constraintTop_toBottomOf="@id/line_ornament_top"
      app:layout_constraintEnd_toEndOf="parent"/>

  <View
      android:id="@+id/line_ornament_bottom"
      android:layout_width="@dimen/spacing_200"
      android:layout_height="@dimen/spacing_2"
      android:layout_marginTop="@dimen/spacing_10"
      android:background="@color/seed"
      app:layout_constraintTop_toBottomOf="@id/line_ornament_middle"
      app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>